<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/twitter_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

<TextView
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="@string/twitter_main_hello" />

<Button android:text="Login twitter" android:id="@+id/tweetlogin_button" android:layout_height="wrap_content" android:layout_width="fill_parent"></Button>
<Button android:id="@+id/logout_button" android:layout_height="wrap_content" android:layout_width="fill_parent" android:text="Logout twitter"></Button>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

</LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/twitter_filter"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/twitter_filter_field"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:ems="10"
        android:text="@string/space" >

        <requestFocus />
    </EditText>

</LinearLayout>
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/twitter_loginMessage_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <EditText
        android:id="@+id/loginResultTextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:ems="10"
        android:inputType="textMultiLine" />

</LinearLayout>
