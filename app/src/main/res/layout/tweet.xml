<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <TextView
        android:id="@+id/textView0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space" />

     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >

         <TextView
             android:id="@+id/uploadHashTextView"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="@string/uploadHashText" />

         <EditText
             android:id="@+id/uploadHashText"
             android:layout_width="0dip"
             android:layout_height="wrap_content"
             android:layout_weight="0.37"
             android:ems="10"
             android:hint="#uploadHashTag" >

             <requestFocus />
         </EditText>

         <Button
             android:id="@+id/setUploadHashButton"
             android:layout_width="100dp"
             android:layout_height="wrap_content"
             android:text="@string/set" >
         </Button>
     </LinearLayout>
    
    <EditText
        android:id="@+id/edittext1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="" >
    </EditText>

    <Button
        android:id="@+id/tweet_tweet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="つぶやく" >
    </Button>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="location " />
    <CheckBox android:id="@+id/locationSendCheckbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/locationSend" />
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" intrval:" />

        <Spinner android:id="@+id/sendIntervalSpinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        </Spinner>

    </LinearLayout>
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/space" />

     <LinearLayout
         android:layout_width="659dp"
         android:layout_height="wrap_content"
         android:orientation="horizontal" >

        <TextView
           android:id="@+id/textView2"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="@string/twitterquery" />

       <EditText
           android:id="@+id/queryText"
           android:layout_width="200dp"
           android:layout_height="wrap_content"
           android:hint="#downloadHashTag" >

          <requestFocus />
       </EditText>

       <Button
           android:id="@+id/setDownloadHashButton"
           android:layout_width="wrap_content"
           android:layout_height="fill_parent"
           android:text="@string/set" />
      
    </LinearLayout>
    <Button
        android:id="@+id/queryButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/querybuttontext" />

    <EditText
        android:id="@+id/answerTextArea"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.35"
        android:ems="10"
        android:inputType="textMultiLine" />

</LinearLayout>
